{
	"manifest_version": 2,
	"name": "SyncEvent",
	"version": "0.130",
	"description": "Syncing events in browsers",
	"background":
	{
    "scripts": 
        [
            "js/socket.io.js",
            "js/background.js"
        ],
        "presistant": false
	},
    "content_scripts":
    [{
			"matches": ["<all_urls>"],
			"all_frames": true,
            "js": ["js/content.js"],
            "run_at": "document_end"
    }],
	"icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action":
	{
		"default_icon": "icons/icon16.png",
		"default_title": "Sync Event",
		"default_popup": "popup.html"
	},
	"permissions": 
	[
		"storage",
		"*://*/*",
		"<all_urls>"
	]
}