{
	"manifest_version": 2,
	"name": "SyncEvent",
	"version": "0.210",
	"description": "Watch videos with friends synchronously!",
	"background":
	{
		"persistent": true,
    	"scripts": 
    	[
    	    "js/socket.io.slim.js",
    	    "js/background.js"
    	]
	},
    "content_scripts":
    [{
		"matches": ["<all_urls>"],
		"all_frames": true,
        "js": ["js/content.js"],
        "run_at": "document_end"
    }],
	"icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action":
	{
		"default_icon": "icons/icon16.png",
		"default_title": "SyncEvent",
		"default_popup": "popup.html"
	},
	"permissions": 
	[
		"storage",
		"*://*/*",
		"<all_urls>"
	]
}