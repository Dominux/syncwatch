{
	"manifest_version": 2,
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"version": "0.304",
	"default_locale": "en",
	"background":
	{
		"persistent": true,
    	"scripts": 
    	[
    	    "js/socket.io.slim.js",
    	    "js/background.js"
    	]
	},
    "content_scripts":
    [{
		"matches": ["<all_urls>"],
		"all_frames": true,
        "js": ["js/content.js"],
        "run_at": "document_end"
    }],
	"icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action":
	{
		"default_icon": "icons/icon16.png",
		"default_title": "SyncWatch",
		"default_popup": "popup.html"
	},
	"permissions": 
	[
		"storage",
		"activeTab",
		"tabs",
		"notifications"
	]
}